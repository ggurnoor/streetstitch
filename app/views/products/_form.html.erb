<%= form_with(model: product, local: true, html: { multipart: true }) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :original_price %><br>
    <%= form.text_field :original_price %>
  </div>

  <div>
    <%= form.label :stock %><br>
    <%= form.number_field :stock %>
  </div>

  <div>
    <%= form.label :brand_id, "Brand" %><br>
    <%= form.collection_select :brand_id, Brand.all, :id, :name, prompt: "Select a brand" %>
  </div>

  <div>
    <%= form.label :category_ids, "Categories" %><br>
    <%= form.collection_select :category_ids, Category.all, :id, :name, {}, { multiple: true } %>
  </div>

  <div>
    <%= form.label :image, "Upload Image" %><br>
    <%= form.file_field :image %>
    <% if product.image.attached? %>
      <p>Current image:</p>
      <%= image_tag product.image, width: "200px", style: "margin-top: 10px;" %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
