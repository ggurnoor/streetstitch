<% if @cart_items.empty? %>
  <h2>Your cart is empty ðŸ›’</h2>
  <%= link_to "Browse Products", products_path, class: "btn btn-primary" %>
<% else %>
  <h1>ðŸ›’ Your Cart</h1>

  <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Line Total</th>
        <% if user_signed_in? %>
          <th>Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td>
            <% if user_signed_in? %>
              <%= form_with url: cart_item_path(item), method: :patch, local: true do |f| %>
                <%= f.number_field :quantity, min: 1, value: item.quantity, name: "cart_item[quantity]", style: "width: 60px;" %>
                <%= f.submit "Update", class: "btn btn-sm btn-outline-secondary" %>
              <% end %>
            <% else %>
              <%= number_field_tag "quantity", item.quantity, min: 1, disabled: true, style: "width: 60px;" %>
            <% end %>
          </td>
          <td><%= number_to_currency(item.product.price) %></td>
          <td><%= number_to_currency(item.product.price * item.quantity) %></td>
          <% if user_signed_in? %>
            <td>
              <%= button_to "Remove", cart_item_path(item), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Proceed to Checkout", checkout_path, class: "btn btn-success" %>

<% end %>
