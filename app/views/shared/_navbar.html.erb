<nav class="navbar">
  <div>
    <%= link_to "🏠 StreetStitch", root_path, class: "nav-link brand" %>
    <%= link_to "All Products", products_path, class: "nav-link" %>
    <%= link_to "About", about_path, class: "nav-link" %>
    <%= link_to "Contact", contact_path, class: "nav-link" %>
    <%= link_to "🛒 Cart", cart_path, class: "nav-link" %>
    <% if user_signed_in? %>
      <%= link_to "My Orders", orders_path, class: "nav-link" %>
    <% end %>
  </div>

  <div>
    <% if user_signed_in? %>
      <span class="nav-user">Hi, <%= current_user.email %></span>
      <%= button_to "Logout", destroy_user_session_path, method: :delete, form: { class: "inline-form" }, class: "logout-btn" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
    <% end %>
  </div>
</nav>
